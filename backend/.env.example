# AI Publisher 后端环境配置

# 应用配置
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Supabase 配置
SUPABASE_URL=https://sclxktmudzfagwegiyjq.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Google Gemini AI 配置
GEMINI_API_KEY=your-gemini-api-key

# 社交媒体 API 配置
# Twitter API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Facebook API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Instagram API (通过 Facebook)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# TikTok API
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# YouTube API
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@aipublisher.com
FROM_NAME=AI Publisher

# Redis 配置（用于缓存和会话）
REDIS_URL=redis://localhost:6379

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 监控配置
SENTRY_DSN=your-sentry-dsn

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# API 使用限制配置
FREE_PLAN_LIMIT=1000
PREMIUM_PLAN_LIMIT=10000
ENTERPRISE_PLAN_LIMIT=100000

# 定时任务配置
ENABLE_SCHEDULED_TASKS=true
TASK_RUNNER_INTERVAL=60000  # 1 minute

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
CORS_ORIGIN=http://localhost:3000

# 数据库配置（如果使用其他数据库）
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_publisher

# 第三方服务配置
# AWS S3 (用于文件存储)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-publisher-uploads

# Cloudinary (图片处理)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# 分析服务
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# 支付服务
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# 通知服务
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=your-pusher-cluster
