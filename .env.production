# ===========================================
# AI Publisher - Production Environment
# ===========================================

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-key-here

# ===========================================
# Supabase Configuration (Production)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key
SUPABASE_PROJECT_ID=your_supabase_project_id

# ===========================================
# AI Configuration
# ===========================================
# Google Gemini API Key (Production)
GEMINI_API_KEY=AIzaSyBtNkwPeJGoViemSfzXMjQmytmCMuWEvwY

# OpenAI Configuration (Backup AI Service)
OPENAI_API_KEY=your_production_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# ===========================================
# Social Media Platform API Keys (Production)
# ===========================================

# Twitter/X (Production App)
TWITTER_CLIENT_ID=your_production_twitter_client_id
TWITTER_CLIENT_SECRET=your_production_twitter_client_secret
TWITTER_BEARER_TOKEN=your_production_twitter_bearer_token

# Facebook/Instagram (Production App)
FACEBOOK_APP_ID=your_production_facebook_app_id
FACEBOOK_APP_SECRET=your_production_facebook_app_secret

# LinkedIn (Production App)
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_production_linkedin_client_secret

# TikTok (Production App)
TIKTOK_CLIENT_KEY=your_production_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_production_tiktok_client_secret

# YouTube (Production App)
YOUTUBE_CLIENT_ID=your_production_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_production_youtube_client_secret

# ===========================================
# Security Configuration
# ===========================================
# Webhook Secret for API security
WEBHOOK_SECRET=your-webhook-secret-key

# JWT Secret for additional security
JWT_SECRET=your-jwt-secret-key

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key

# ===========================================
# Redis Configuration (for caching)
# ===========================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# ===========================================
# File Upload Configuration
# ===========================================
# Maximum file size (in bytes)
MAX_FILE_SIZE=52428800

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# Upload directory
UPLOAD_DIR=/app/uploads

# ===========================================
# Email Configuration (for notifications)
# ===========================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@your-domain.com

# ===========================================
# Monitoring and Analytics
# ===========================================
# Enable monitoring services
ENABLE_MONITORING=true

# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn

# Google Analytics (optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# ===========================================
# Rate Limiting Configuration
# ===========================================
# API rate limits (requests per minute)
API_RATE_LIMIT=100
AUTH_RATE_LIMIT=10
AI_RATE_LIMIT=20

# ===========================================
# Database Configuration
# ===========================================
# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===========================================
# CDN Configuration (optional)
# ===========================================
CDN_URL=https://cdn.your-domain.com
CDN_API_KEY=your_cdn_api_key

# ===========================================
# Backup Configuration
# ===========================================
# Backup storage (S3, Google Cloud, etc.)
BACKUP_PROVIDER=s3
BACKUP_BUCKET=your-backup-bucket
BACKUP_ACCESS_KEY=your_backup_access_key
BACKUP_SECRET_KEY=your_backup_secret_key

# ===========================================
# SSL Configuration
# ===========================================
# SSL certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_FILE_UPLOAD=true
ENABLE_SOCIAL_LOGIN=true

# ===========================================
# Performance Configuration
# ===========================================
# Next.js configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true

# Cache settings
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/ai-publisher/app.log

# ===========================================
# Health Check Configuration
# ===========================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
